@model AtticaDrainPartsDetailsModel

<div class="form-group mb-3">
    @if (Model.ChosenAtticaDetail != null)
    {
        var roofType = Model.ChosenAtticaDetail.RoofType == AtticaRoofTypeEnum.WarmRoof ? "Warm Roof" : "Cold Roof";
        var isWalkable = Model.ChosenAtticaDetail.IsWalkable == AtticaWalkableEnum.Walkable ? "Walkable" : "Not Walkable";

        <div class="shadow card h-100 border-1 mb-4">
            <input asp-for="AtticaDetailId" value="Model.ChosenAtticaDetail.Id" type="hidden" />
            <div class="card-img-custom">
                <img src="@Model.ChosenAtticaDetail.ImageUrl" class="img-fluid mx-auto d-block card-img-custom" alt="Card image cap">
                <hr />
            </div>
            <div class="card-body text-center">
                <h4 class="font-weight-bold mt-2 text-left text-dark text-center text-uppercase small">@roofType</h4>

                <h4 class="font-weight-bold text-left text-dark text-center text-uppercase small">@isWalkable</h4>

                <p class="card-text">@Model.ChosenAtticaDetail.Description</p>
            </div>
        </div>
    }

    <div class="form-group">
        <a onclick="showInPopup('@Url.Action("AddAtticaDetail","AtticaDrains",null,Context.Request.Scheme)','Choose Attica Detail')" class="btn btn-success text-white">Choose Attica Detail</a>
    </div>

</div>