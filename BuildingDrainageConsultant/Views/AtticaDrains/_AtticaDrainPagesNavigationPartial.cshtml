@model AllAtticaDrainsQueryModel

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalDrains / AllDrainsQueryModel.DrainsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)" style="margin-top: 30px"
           asp-controller="AtticaDrains"
           asp-action="SearchAtticaDrain"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-screedWaterproofing="@Model.ScreedWaterproofing"
           asp-route-concreteWaterproofing="@Model.ConcreteWaterproofing"
           asp-route-diameter="@Model.Diameter"
           asp-route-sorting="@Model.Sorting"
           asp-route-atticaDetailId="@Model.AtticaDetailId"><i class="bi bi-caret-left-fill"></i></a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.Drains.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 30px"
           asp-controller="AtticaDrains"
           asp-action="SearchAtticaDrain"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-screedWaterproofing="@Model.ScreedWaterproofing"
           asp-route-concreteWaterproofing="@Model.ConcreteWaterproofing"
           asp-route-diameter="@Model.Diameter"
           asp-route-sorting="@Model.Sorting"
           asp-route-atticaDetailId="@Model.AtticaDetailId"><i class="bi bi-caret-right-fill"></i></a>
    </div>
</div>