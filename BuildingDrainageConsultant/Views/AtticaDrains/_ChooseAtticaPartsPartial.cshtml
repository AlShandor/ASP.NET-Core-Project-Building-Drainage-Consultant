@model AtticaDrainPartsDetailsModel

<div class="form-group mb-3">
    @if (Model.ChosenAtticaParts != null)
    {
        foreach (var part in Model.ChosenAtticaParts)
        {
            <div class="shadow card h-100 border-1 mb-4">
                <div class="card-img-custom">
                    <img src="@part.ImageUrl" class="img-fluid mx-auto d-block card-img-custom" alt="Card image cap">
                    <hr />
                </div>
                <div class="card-body text-center">
                    <h4 class="font-weight-bold mt-2 text-left text-dark text-center text-uppercase small">Name</h4>

                    <p class="card-text">@part.Description</p>
                </div>
            </div>
        }
    }

    <div class="form-group">
        <a onclick="showInPopup('@Url.Action("AddAtticaPart","AtticaDrains", null ,Context.Request.Scheme)','Choose Attica Part')" class="btn btn-success text-white">Add Attica Part</a>
    </div>

</div>