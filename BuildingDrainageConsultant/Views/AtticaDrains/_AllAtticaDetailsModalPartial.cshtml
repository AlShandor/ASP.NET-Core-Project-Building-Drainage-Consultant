@model IEnumerable<AtticaDetailServiceModel>


<div class="modal fade" id="chooseAtticaDetailModalCenter" tabindex="-1" role="dialog" aria-labelledby="chooseAtticaDetailModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">

            @*Header*@
            <div class="modal-header">
                <h5 class="modal-title" id="chooseAtticaDetailModalTitle">Choose Attica Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            @*Body*@
            <div class="modal-body">
                <div class="row col-12">
                    @foreach (var atticaDetail in Model)
                    {
                        var atticaDetailDescriptionTruncated = atticaDetail.Description.Length > 50 ? atticaDetail.Description.ToString().Substring(0, 50) + "..." : atticaDetail.Description;
                        var roofType = atticaDetail.RoofType == AtticaRoofTypeEnum.WarmRoof ? "Warm Roof" : "Cold Roof";
                        var isWalkable = atticaDetail.IsWalkable == AtticaWalkableEnum.Walkable ? "Walkable" : "Not Walkable";

                        <div class="col-6 col-md-6 col-lg-4 mb-3">
                            <div class="shadow card h-100 border-1">
                                <div class="card-img-custom">
                                    <img src="@atticaDetail.ImageUrl" class="img-fluid mx-auto d-block card-img-custom" alt="Card image cap">
                                    <hr />
                                </div>
                                <div class="card-body text-center">
                                    <h4 class="font-weight-bold mt-2 text-left text-dark text-center text-uppercase small">@roofType</h4>

                                    <h4 class="font-weight-bold text-left text-dark text-center text-uppercase small">@isWalkable</h4>

                                    <a asp-controller="AtticaDrains" asp-action="AddAtticaDetail" asp-route-id="@atticaDetail.Id" class="shadow btn btn-primary">Add</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @*Footer*@
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

