@model AtticaDrainPartsDetailsModel

@{ Layout = null;
}


@if (!Model.AtticaParts.Any())
{
    <div class="col-12">
        <label class="col-6 offset-3">No Attica Parts Found!</label>
    </div>
}
else
{
    <div class="modal-body">
        <div class="row col-12">

            @foreach (var part in Model.AtticaParts)
            {
                <div class="col-6 col-md-6 col-lg-4 mb-3">
                    <div class="shadow card h-100 border-1">
                        <form asp-action="AddAtticaPart" asp-route-id="@part.Id" onsubmit="return AjaxPost(this);">
                            <div class="card-img-custom">
                                <img src="@part.ImageUrl" class="img-fluid mx-auto d-block card-img-custom" alt="Card image cap">
                                <hr />
                            </div>
                            <div class="card-body text-center">
                                <h4 class="font-weight-bold mt-2 text-left text-dark text-center text-uppercase">@part.Name</h4>
                            </div>
                            <div class="card-footer text-center">
                                <input class="shadow btn btn-primary" type="submit" value="Add" />
                            </div>
                        </form>

                    </div>
                </div>
            }

        </div>
    </div>
}
