@model AllDrainsQueryModel

@{
    ViewData["Title"] = "All Drains";
}

<form method="get">
    <div class="input-group col-md-4 card-row">
        <input asp-for="SearchTerm" type="text" class="form-control" placeholder="Search by drain name...">
        <div class="input-group-append">
            <span class="input-group-text">Search</span>
        </div>
    </div>
</form>

@if (!Model.Drains.Any())
{
    <h2 class="text-center">No drains found by the given criteria!</h2>
}

<div class="card-deck">
    @foreach (var drain in Model.Drains)
    {
        var drainDescriptionTruncated = drain.Description.Length > 90 ? drain.Description.ToString().Substring(0, 90) + "..." : drain.Description;

        <div class="col-md-4 card-row">
            <div class="card">
                <img class="card-img-top" src="@drain.ImageUrl" alt="@drain.Name">
                <div class="card-body">
                    <h5 class="card-title">@drain.Name</h5>
                    <p class="card-text">@drainDescriptionTruncated</p>
                    <a asp-controller="Drains" asp-action="Details" asp-route-id="@drain.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }

</div>


@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalDrains / AllDrainsQueryModel.DrainsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Drains"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm">Previous Page</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.Drains.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Drains"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm">Next Page</a>
    </div>
</div>


