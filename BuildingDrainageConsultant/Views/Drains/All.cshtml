@model IEnumerable<DrainListingViewModel>

@{
    ViewData["Title"] = "All Drains";
}

<div class="card-deck">
    @foreach (var drain in Model)
    {
        <div class="col-md-4 card-row">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@drain.ImageUrl" alt="@drain.Name">
                <div class="card-body">
                    <h5 class="card-title">@drain.Name</h5>
                    <p class="card-text">@drain.Description</p>
                    <a asp-controller="Drains" asp-action="Details" asp-route-id="@drain.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
