@model AllDrainsQueryModel

@{
    ViewBag.Title = "All Drains";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-8 order-md-2 col-lg-9">
            <div class="container-fluid">
                <div class="row   mb-5">
                    <div class="col-12">
                        <h3 class="mt-3 mb-3 float-md-left">Total results: <span class="text-primary">@Model.TotalDrains</span></h3>

                        <div class="dropdown text-md-left text-center float-md-right mb-3 mt-3 mt-md-0 mb-md-0">
                            <label class="mr-2">Sort by:</label>
                            <a class="btn btn-lg btn-light dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Relevance <span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown" x-placement="bottom-start" style="position: absolute; transform: translate3d(71px, 48px, 0px); top: 0px; left: 0px; will-change: transform;">
                                <a class="dropdown-item" href="#">Name Ascending</a>
                                <a class="dropdown-item" href="#">Flow Rate Descending</a>
                            </div>
                        </div>
                    </div>
                </div>

                <partial name="_DrainsPartial" model="@Model.Drains" />

                <partial name="_DrainsPagesNavigationPartial" model="@Model" />
            </div>
        </div>

        <partial name="_DrainSidebarFilterPartial" />

    </div>
</div>





