@model DrainDetailsValidationModel

@{
    ViewBag.Title = "View Details";
}

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="card-img-top">
            <h2 class="heading-margin text-center">@Model.Name Details</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" value="@Model.Name" disabled>
                </div>

                <div class="form-group">
                    <label asp-for="FlowRate"></label>
                    <input class="form-control" asp-for="FlowRate" value="@Model.FlowRate" disabled>
                </div>

                <div class="form-group">
                    <label asp-for="DrainageArea"></label>
                    <input class="form-control" asp-for="DrainageArea" value="@Model.DrainageArea" disabled>
                </div>

                <div class="form-group">
                    <label asp-for="Diameter"></label>
                    <select class="form-control" asp-for="Diameter" asp-items="Html.GetEnumSelectList<DrainDiameterEnum>()" disabled>
                        <option value="@Model.Diameter"></option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="VisiblePart"></label>
                    <select class="form-control" asp-for="VisiblePart" asp-items="Html.GetEnumSelectList<DrainVisiblePartEnum>()" disabled>
                        <option value="@Model.VisiblePart"></option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Waterproofing"></label>
                    <select class="form-control" asp-for="Waterproofing" asp-items="Html.GetEnumSelectList<DrainWaterproofingEnum>()" disabled>
                        <option value="@Model.Waterproofing"></option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="HasHeating"></label>
                    <div class="form-control" disabled>
                        @Html.RadioButtonFor(drain => drain.HasHeating, true, new { disabled = "disabled" })
                        <label class="radio-button-margin">Yes</label>
                        @Html.RadioButtonFor(drain => drain.HasHeating, false, new { disabled = "disabled" })
                        <label>No</label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ForRenovation"></label>
                    <div class="form-control">
                        @Html.RadioButtonFor(drain => drain.ForRenovation, true, new { disabled = "disabled" })
                        <label class="radio-button-margin">Yes</label>
                        @Html.RadioButtonFor(drain => drain.ForRenovation, false, new { disabled = "disabled" })
                        <label>No</label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="HasFlapSeal"></label>
                    <div class="form-control">
                        @Html.RadioButtonFor(drain => drain.HasFlapSeal, true, new { disabled = "disabled" })
                        <label class="radio-button-margin">Yes</label>
                        @Html.RadioButtonFor(drain => drain.HasFlapSeal, false, new { disabled = "disabled" })
                        <label>No</label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input class="form-control" asp-for="ImageUrl" value="@Model.ImageUrl" disabled>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" disabled>@Model.Description</textarea>
                </div>

                <input asp-controller="Drains" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" type="submit" formmethod="get" value="Edit" />
                <input asp-controller="Drains"
                       asp-action="Delete"
                       asp-route-id="@Model.Id"
                       class="btn btn-danger" type="submit"
                       onclick="return confirm('Are you sure you want to delete this product?')" value="Delete" />
            </form>
        </div>
    </div>
</div>