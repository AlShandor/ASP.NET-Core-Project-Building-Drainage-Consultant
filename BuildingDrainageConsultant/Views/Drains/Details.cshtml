@model DrainFormModel

@{
    ViewBag.Title = "View Details";
    ViewBag.View = "Details";
    ViewBag.ImageGallery = "drains";
}

<partial name="_DrainFormPartial" model="@Model" />

@section Scripts {

    <script>
        var rendered = false;
        var targetDiv = document.getElementById("extensions-section");
        var extensionBtn = document.getElementById("extension-button");
        $(extensionBtn).click( ev => {
            ev.preventDefault();
            if (!rendered) {
                targetDiv.style.display = "block";
                extensionBtn.innerText = "Hide Extensions";
                rendered = true;
            } else {
                targetDiv.style.display = "none";
                extensionBtn.innerText = "Show Extensions";
                rendered = false;
            }
        });
    </script>
}