@model DrainFormModel

@{
    var isAddView = ViewBag.Title == "Add Drains" ? true : false;
    var isEditView = ViewBag.Title == "Edit Drain" ? true : false;
}

<div class="form-group mb-3">

    @if (Model.Image != null)
    {
        var imgSource = Model.Image.Id == 1 ? "common/defaultImage.gif" : $"drains/{Model.Image.Name}";


        <div class="shadow card h-100 border-1 mb-4">
            <input asp-for="ImageId" value="@Model.ImageId" type="hidden" />
            <div class="card-img-custom">
                <img src="~/images/@imgSource" class="img-fluid mx-auto d-block card-img-custom" alt="Card image cap">
            </div>
        </div>
    }

    @if (isAddView)
    {
        <div class="form-group">
            <a onclick="showInPopup('@Url.Action("AddDrainImage","Drains",null,Context.Request.Scheme)','Choose Drain Image')" class="btn btn-success text-white">Choose Image</a>
        </div>
    }
    @if (isEditView)
    {
        <div class="form-group">
            <a onclick="showInPopup('@Url.Action("EditDrainImage","Drains",new { drainId = Model.Id },Context.Request.Scheme)','Choose Drain Image')" class="btn btn-success text-white">Choose Image</a>
        </div>
    }
</div>
