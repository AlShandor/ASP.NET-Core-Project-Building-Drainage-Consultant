@model ArticleFormModel

@{
    var isEditView = ViewBag.View == "Edit" ? true : false;
}

<div class="row">

    <div class="offset-md-3 col-md-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            @if (Model.Image != null)
            {
                <input asp-for="ImageId" value="@Model.ImageId" type="hidden" />
            }

            <partial name="_ImagePartial" model="Model" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="shadow-sm form-control" asp-for="Title">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea class="shadow-sm form-control" rows="4" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />

            @if (isEditView)
            {
                <partial name="_DeleteButtonWithModalPopup" model="@Model" />
            }
        </form>
    </div>
</div>
