@model AtticaPartFormModel

@{
    var isEditView = ViewBag.Title == "Edit Attica Part" ? true : false;
    var isDetailsView = ViewBag.Title == "View Details" ? true : false;
}

<div class="row">
    <div class="offset-md-3 col-md-6">
        @if (isEditView || isDetailsView)
        {
            <img src="@Model.ImageUrl" class="shadow-sm card-img-top">
        }

        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="shadow-sm form-control" asp-for="Name" disabled="@isDetailsView">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input class="shadow-sm form-control" asp-for="ImageUrl" disabled="@isDetailsView">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="shadow-sm form-control" rows="4" disabled="@isDetailsView"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>


            @if (isEditView)
            {
                <input class="btn btn-primary" type="submit" value="Save" />

                <partial name="_DeleteButtonWithModalPopup" model="@Model" />
            }

        </form>

    </div>
</div>