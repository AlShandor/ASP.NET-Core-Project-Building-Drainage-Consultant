@model AtticaDetailFormModel

@{
    var isAddView = ViewBag.Title == "Add Attica Detail" ? true : false;
    var isEditView = ViewBag.Title == "Edit Attica Detail" ? true : false;
}

<div class="form-group mb-3">

    @if (Model.Image != null)
    {
        var imgSource = Model.Image.Id == 1 ? "common/defaultImage.gif" : $"atticadetails/{Model.Image.Name}";


        <div class="shadow card h-100 border-1 mb-4">
            <input asp-for="ImageId" value="@Model.ImageId" type="hidden" />
            <div class="card-img-custom">
                <img src="~/images/@imgSource" class="img-fluid mx-auto d-block card-img-custom" alt="Card image cap">
            </div>
        </div>
    }

    @if (isAddView)
    {
        <div class="form-group">
            <a onclick="showInPopup('@Url.Action("AddAtticaDetailImage","AtticaDetails",null,Context.Request.Scheme)','Choose Attica Detail Image')" class="btn btn-success text-white">Choose Image</a>
        </div>
    }
    @if (isEditView)
    {
        <div class="form-group">
            <a onclick="showInPopup('@Url.Action("EditAtticaDetailImage","AtticaDetails",new { atticaDetailId = Model.Id },Context.Request.Scheme)','Choose Attica Detail Image')" class="btn btn-success text-white">Choose Image</a>
        </div>
    }
</div>

