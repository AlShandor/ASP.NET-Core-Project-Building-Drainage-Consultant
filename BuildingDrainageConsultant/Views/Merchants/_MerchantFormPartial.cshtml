@model MerchantFormModel

@{
    var isAddView = ViewBag.Title == "Add Merchant" ? true : false;
    var isEditView = ViewBag.Title == "Edit Merchant" ? true : false;
}

<div class="row">
    <div class="offset-md-3 col-md-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="shadow-sm form-control" asp-for="Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City"></label>
                <input class="shadow-sm form-control" asp-for="City">
                <span asp-validation-for="City" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input class="shadow-sm form-control" asp-for="Address">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="shadow-sm form-control" asp-for="Email">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <input class="shadow-sm form-control" asp-for="Phone">
                <span asp-validation-for="Phone" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Website"></label>
                <input class="shadow-sm form-control" asp-for="Website">
                <span asp-validation-for="Website" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Latitude"></label>
                <input class="shadow-sm form-control" asp-for="Latitude">
                <span asp-validation-for="Latitude" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitude"></label>
                <input class="shadow-sm form-control" asp-for="Longitude">
                <span asp-validation-for="Longitude" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />

            @if (isEditView)
            {
                <input asp-controller="Merchants"
                       asp-action="Delete"
                       asp-route-id="@Model.Id"
                       class="shadow btn btn-danger" type="submit"
                       onclick="return confirm('Are you sure you want to delete this merchant?')" value="Delete" />
            }

        </form>
    </div>
</div>
